<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/ActionbarCustomStyle</item>
        <item name="android:actionBarTabStyle">@style/ActionBarCustomTabStyle</item>
        <item name="android:actionBarTabBarStyle">@style/ActionBarCustomTabBarStyle</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarCustomTabTextStyle</item>
    </style>

    <style name="ActionbarCustomStyle" parent="@android:style/Widget.Holo.Light.ActionBar">

        <!-- 自定义actionbar背景 -->
        <item name="android:background">#0085d0</item>
        <item name="android:titleTextStyle">@style/ActionbarTitleStyle</item>
        <!--
        去掉acionbar的图标和标题
        <item name="android:displayOptions">useLogo</item>
        -->

    </style>

    <!-- 自定义标题样式 -->
    <style name="ActionbarTitleStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ddeaf6</item>
    </style>

    <style name="ActionBarCustomTabStyle" parent="android:style/Widget.Holo.Light.ActionBar.TabView">

        <!--         <item name="android:background">@drawable/actionbar_tab_bg</item> -->

    </style>
    <style name="ActionBarCustomTabBarStyle" parent="android:style/Widget.Holo.Light.ActionBar.TabBar">

        <item name="android:background">#e4f0ff</item>
        <item name="android:divider">@null</item>
    </style>

    <!-- Tab选项标签字体的样式 -->
    <style name="ActionBarCustomTabTextStyle" parent="android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@drawable/tab_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">5dp</item>

    </style>

    <style name="item_text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/loading_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="CustomProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="search_item_style">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <style name="search_item_text">
        <item name="android:textColor">#6381a2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">3dp</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <!-- <item name="android:backgroundDimEnabled">false</item> -->
    </style>
    <style name="text_title_style2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">false</item>
        <item name="android:textSize">19sp</item>
    </style>
</resources>